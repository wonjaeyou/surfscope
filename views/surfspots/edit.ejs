<% layout('/layout/boilerplate') %>

<div class="row">
  <h1 class="text-center">Edit Spot</h1>
  <div class="col-md-6 offset-md-3">
    <form action="/surfspots/<%=spot._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Spot Name</label>
        <input required class="form-control" type="text" id="title" name="surfspot[title]" value="<%= spot.title %>">
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input required class="form-control" type="text" id="location" name="surfspot[location]" value="<%= spot.location %>">
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload image</label>
        <input class="form-control" type="file" id="image" name="image" multiple>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Describe it!</label>
        <textarea class="form-control" type="text" id="description" name="surfspot[description]"><%= spot.description %></textarea>
      </div>
      <div class="mb-3">
        <% spot.images.forEach((img,i) => { %>
        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
        <div class="form-check-inline">
          <input type="checkbox" id="image-<%= i  %>" name="deleteImages[]" value="<%= img.filename %>">
        </div>
        <label for="image-<%= i  %>">Delete</label>
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update</button>
      </div>
    </form>
    <a href="/surfspots/<%= spot._id %>">Back</a>
  </div>
</div>